<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorMiMuniPrimary</item>
        <item name="colorPrimaryDark">@color/colorMiMuniPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/textColor</item>
        <item name="progressBarBackground">@color/black</item>
        <item name="android:textViewStyle">@style/BaseTextView</item>
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>
        <item name="popupMenuStyle">@style/popupMenuStyle</item>
        <item name="textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColorHint</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarSize">4dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="TutorialFragmentTheme" parent="@android:style/Theme.Dialog">
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="ActionBarTheme" parent="Widget.AppCompat.ActionBar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
    </style>


    <style name="popupMenuStyle" parent="Base.Widget.AppCompat.Light.PopupMenu">
        <item name="android:dropDownVerticalOffset">5dp</item>
        <item name="android:popupBackground">@drawable/white_radius_background</item>
    </style>

    <style name="BaseTextView" parent="android:Widget.TextView">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MenuTheme" parent="AppTheme">
        <item name="colorPrimary">@color/textColor</item>
        <item name="colorPrimaryDark">@color/textColor</item>
    </style>

    <style name="DiscussionTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primaryDiscussionColor</item>
        <item name="colorPrimaryDark">@color/primaryDiscussionColor</item>
        <item name="android:windowBackground">@color/primaryDiscussionColor</item>
    </style>

    <style name="BudgetsTheme" parent="AppTheme">
        <item name="colorPrimary">@color/mainBudgetBackground</item>
        <item name="colorPrimaryDark">@color/mainBudgetBackground</item>
        <item name="android:windowBackground">@color/mainBudgetBackground</item>
        <item name="textColor">@color/white</item>
    </style>

    <style name="ExpensesTheme" parent="BudgetsTheme">
        <item name="colorPrimary">@color/colorExpensesPrimary</item>
        <item name="colorPrimaryDark">@color/colorExpensesPrimary</item>
        <item name="android:windowBackground">@color/colorExpensesPrimary</item>
    </style>

    <style name="ExpensesTextInvertedTheme" parent="ExpensesTheme">
        <item name="textColor">@color/textColor</item>
    </style>

    <style name="IncomeTheme" parent="BudgetsTheme">
        <item name="colorPrimary">@color/colorIncomePrimary</item>
        <item name="colorPrimaryDark">@color/colorIncomePrimary</item>
        <item name="android:windowBackground">@color/colorIncomePrimary</item>
    </style>

    <style name="IncomeTextInvertedTheme" parent="IncomeTheme">
        <item name="textColor">@color/textColor</item>
    </style>

    <style name="NotificationsTheme" parent="AppTheme">
        <item name="colorPrimary">@color/notificationsPrimary</item>
        <item name="colorPrimaryDark">@color/notificationsPrimary</item>
    </style>

    <style name="NotificationsInvertedTheme" parent="AppTheme">
        <item name="colorPrimary">@color/notificationsSecondary</item>
        <item name="colorPrimaryDark">@color/notificationsSecondary</item>
    </style>

    <style name="NotificationsThemeFullBackground" parent="NotificationsTheme">
        <item name="android:windowBackground">@color/notificationsPrimary</item>
        <item name="textColor">@color/white</item>
    </style>

    <style name="AppThemeBackground" parent="AppTheme">
        <item name="colorPrimary">@color/colorMiMuniPrimary</item>
        <item name="colorPrimaryDark">@color/colorMiMuniPrimary</item>
        <item name="android:windowBackground">@color/colorMiMuniPrimary</item>
    </style>

    <style name="MainMenuTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="HeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name='android:textSize'>33sp</item>
        <item name='android:textAllCaps'>true</item>
        <item name="fontPath">fonts/Chivo-Black.ttf</item>
    </style>

    <style name="MainButtonText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name='android:textSize'>22sp</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="SectionTitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name='android:textSize'>30sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/Chivo-Black.ttf</item>
    </style>

    <style name="FiguresText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorMiMuniPrimary</item>
        <item name='android:textSize'>37sp</item>
        <item name="fontPath">fonts/WorkSans-Light.ttf</item>
    </style>

    <style name="FiguresSub" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name='android:textSize'>15sp</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="StatusText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name='android:textSize'>10sp</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="AboutText" parent="TextAppearance.AppCompat">
        <item name='android:fontFamily'>sans-serif</item>
        <item name="android:textColor">@color/statusNotDone</item>
        <item name='android:textSize'>13sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="ProgressBarText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="fontPath">fonts/WorkSans-Light.ttf</item>
    </style>


    <style name="AboutBlackLinkText" parent="AboutText">
        <item name="android:textColor">@color/textColor</item>
    </style>


    <style name="ExecutedText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name='android:textSize'>12sp</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="DevelopmentNumber" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorMiMuniPrimary</item>
        <item name='android:textSize'>30sp</item>
        <item name="fontPath">fonts/WorkSans-Light.ttf</item>
    </style>

    <style name="SmallBlueText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name='android:textSize'>14sp</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="SmallerText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name='android:textSize'>12sp</item>
        <item name="fontPath">fonts/WorkSans-Regular.ttf</item>
    </style>

    <style name="BudgetBigText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name='android:textSize'>35sp</item>
        <item name='android:textAllCaps'>true</item>
        <item name="fontPath">fonts/Chivo-Black.ttf</item>
    </style>

    <style name="BudgetBigFigures" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/textColor</item>
        <item name='android:textSize'>36sp</item>
        <item name="fontPath">fonts/WorkSans-Light.ttf</item>
    </style>

    <style name="BudgetActionText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name='android:textSize'>14sp</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="BudgetExecutedText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/textColor</item>
        <item name='android:textSize'>10sp</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="BudgetExecutedNumbers" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/textColor</item>
        <item name='android:textSize'>13sp</item>
        <item name="fontPath">fonts/TextMeOne-Regular.ttf</item>
    </style>

    <style name="InputText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">?attr/android:textColorHint</item>
        <item name='android:textSize'>13sp</item>
        <item name="fontPath">fonts/WorkSans-Regular.ttf</item>
    </style>

    <style name="NormalText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name='android:textSize'>13sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="fontPath">fonts/WorkSans-Regular.ttf</item>
    </style>

    <style name="NormalBoldText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name='android:textSize'>13sp</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="NormalSubText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name='android:textSize'>15sp</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="ImportantText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name='android:textSize'>14sp</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="BudgetSubtitleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/textColor</item>
        <item name='android:textSize'>24sp</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="BudgetsItemTableText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name='android:textSize'>12sp</item>
        <item name="fontPath">fonts/WorkSans-Regular.ttf</item>
    </style>

    <style name="BudgetItemTableHeader" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name='android:textSize'>13sp</item>
        <item name='android:textAllCaps'>true</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="BudgetItemTableSubHeader" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name='android:textSize'>12sp</item>
        <item name='android:textAllCaps'>true</item>
        <item name="fontPath">fonts/Archivo-SemiBold.ttf</item>
    </style>

    <style name="BudgetProgressionText" parent="TextAppearance.AppCompat">
        <item name='android:fontFamily'>sans-serif</item>
        <item name="android:textColor">@color/white</item>
        <item name='android:textSize'>8sp</item>
        <item name="fontPath">fonts/Poppins-SemiBold.ttf</item>
    </style>

    <style name="PopulationTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColor</item>
        <item name='android:textSize'>18sp</item>
        <item name="fontPath">fonts/Archivo-Bold.ttf</item>
    </style>

    <style name="NotificationSpinnerTitle" parent="TextAppearance.AppCompat">
        <item name='android:fontFamily'>sans-serif</item>
        <item name="android:textColor">@color/background</item>
        <item name='android:textSize'>13sp</item>
        <item name='android:letterSpacing'>0.03</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="NotificationSpinner" parent="NotificationSpinnerTitle">
        <item name='android:textSize'>12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/notificationAddressColor</item>
    </style>

</resources>
