<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gt.muni.chiantla.mymuni.know.LanguagesFragment">

    <gt.muni.chiantla.widget.CustomNestedScrollView
        android:id="@id/scrollableInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/sectionTitle"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/title_margin"
                android:layout_marginTop="@dimen/title_margin"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="2sp"
                android:textAppearance="@style/HeaderText" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/content_margin"
                app:srcCompat="@mipmap/iconidiomasgreen" />

            <TextView
                android:id="@+id/language1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/content_margin"
                android:gravity="center_horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textAppearance="@style/FiguresSub" />

            <TextView
                android:id="@+id/language2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/content_margin"
                android:gravity="center_horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textAppearance="@style/FiguresSub" />

            <TextView
                android:id="@+id/language3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textAppearance="@style/FiguresSub" />

            <TextView
                android:id="@+id/src"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/src_margin"
                android:layout_weight="0"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:textAppearance="@style/SmallerText" />

        </LinearLayout>
    </gt.muni.chiantla.widget.CustomNestedScrollView>

    <include layout="@layout/section_scroll_indicator" />

</RelativeLayout>
