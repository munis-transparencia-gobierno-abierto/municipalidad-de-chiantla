<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gt.muni.chiantla.notifications.NewNotificationActivity">

    <view
        android:id="@+id/pager"
        class="gt.muni.chiantla.notifications.NewNotificationActivity$NewNotificationViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="0"
        android:paddingLeft="37dp"
        android:paddingRight="37dp">

        <Button
            fontPath="fonts/Archivo-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:onClick="prevStep"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/notification_prev"
            android:textColor="@drawable/text_button"
            android:textSize="14sp" />

        <Button
            android:id="@+id/nextButton"
            fontPath="fonts/Archivo-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/notification_next_button"
            android:onClick="nextStep"
            android:padding="12dp"
            android:text="@string/notification_next"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>
