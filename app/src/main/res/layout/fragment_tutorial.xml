<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tutorialBackground"
    tools:context=".TutorialFragment">

    <RelativeLayout
        android:id="@+id/tutorial_container"
        android:layout_width="240dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/tutorial_bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="21dp"
                android:paddingRight="16dp"
                android:paddingBottom="21dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:textAppearance="@style/SmallBlueText" />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/NormalText"
                    android:textColor="@color/white" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/tutorial_arrow"
            android:layout_width="29dp"
            android:layout_height="22dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="-2dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="-2dp"
            android:src="@drawable/arrow_bubble_tuto"
            android:tint="@color/colorPrimary" />

    </RelativeLayout>

    <Button
        android:id="@+id/nextTutorialButton"
        fontPath="fonts/Archivo-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/notification_next_button"
        android:backgroundTint="@color/colorPrimary"
        android:padding="12dp"
        android:text="@string/info_continue"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>