<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/budgetImage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainBudgetBackground"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        fontPath="fonts/Archivo-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/full_municipality"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_radius"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/budgetType"
            fontPath="fonts/Chivo-Black.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/partialContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            fontPath="fonts/WorkSans-Light.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_weight="0"
            android:text="@string/source"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            fontPath="fonts/Archivo-Bold.ttf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:background="@drawable/google" />

    </LinearLayout>

</LinearLayout>