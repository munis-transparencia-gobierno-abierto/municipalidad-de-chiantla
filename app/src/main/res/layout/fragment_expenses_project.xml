<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="name"
            type="String" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorExpensesPrimary"
        android:orientation="vertical"
        tools:context="gt.muni.chiantla.budget.ExpensesProjectFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/budget_padding"
            android:paddingRight="@dimen/budget_padding"
            android:paddingBottom="13dp"
            android:scrollbarStyle="outsideOverlay">

            <include
                android:id="@+id/projects_button"
                layout="@layout/section_budget_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:buttonInverted="@{false}"
                app:buttonRotation="@{270}"
                app:cardColor="@{@color/white}"
                app:expense="@{true}"
                app:hasTopBorder="@{true}"
                app:lightBackgroundColor="@{true}"
                app:name="@{name}"
                app:progressBackgroundColor="@{@color/backgroundBudgets}"
                app:progressColor="@{@color/colorExpensesPrimary}"
                app:subtitleSize="@{18}" />

        </ScrollView>

    </RelativeLayout>
</layout>