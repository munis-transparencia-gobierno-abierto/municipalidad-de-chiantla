<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_income"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gt.muni.chiantla.budget.IncomeFragment">

    <gt.muni.chiantla.widget.CustomNestedScrollView
        android:id="@+id/scrollableInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/own_income_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorIncomeTypePrimary"
                android:clickable="true"
                android:onClick="goToNext"
                android:padding="35dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp">

                <TextView
                    android:id="@+id/own_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView38"
                    android:layout_marginTop="5dp"
                    android:paddingRight="60dp"
                    android:textAppearance="@style/IncomeBigFigures" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView19"
                    android:layout_marginTop="15dp"
                    android:text="@string/added"
                    android:textAppearance="@style/ProgressNumberBudgets" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:lineSpacingExtra="0sp"
                    android:paddingRight="60dp"
                    android:text="@string/own_income"
                    android:textAppearance="@style/IncomeBigText"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="7dp"
                    app:srcCompat="@mipmap/flecha" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/other_income_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorIncomeTypePrimary"
                android:clickable="true"
                android:onClick="goToNext"
                android:padding="35dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="7dp"
                    app:srcCompat="@mipmap/flecha" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:lineSpacingExtra="0sp"
                    android:paddingRight="60dp"
                    android:text="@string/other_income"
                    android:textAppearance="@style/IncomeBigText"/>

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView20"
                    android:layout_marginTop="15dp"
                    android:text="@string/added"
                    android:textAppearance="@style/ProgressNumberBudgets" />

                <TextView
                    android:id="@+id/other_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView39"
                    android:layout_marginTop="5dp"
                    android:paddingRight="60dp"
                    android:textAppearance="@style/IncomeBigFigures" />
            </RelativeLayout>

        </LinearLayout>
    </gt.muni.chiantla.widget.CustomNestedScrollView>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:background="@color/colorBudgetsPrimary"
        android:cropToPadding="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:stateListAnimator="@null"
        android:visibility="visible"
        app:srcCompat="@mipmap/scrolldownwhite" />

</RelativeLayout>
